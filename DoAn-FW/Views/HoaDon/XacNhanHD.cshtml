    List<CTHD> listcthd = ViewBag.listcthd;
    KhuyenMai KM = new KhuyenMai();
    KM = ViewBag.KM;
    long ThanhTien = 0;
    long TongTien = 0;
    long TTPhaiTra = 0;
    long TienGiam = 0;
    KhachHang KH = ViewBag.KH;
}
