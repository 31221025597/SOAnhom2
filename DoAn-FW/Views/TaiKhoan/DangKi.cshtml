<script>
    function check(input) {
        if (input.value != document.getElementById('MatKhau').value) {
            document.querySelector('.message').innerText = "Mật khẩu không khớp";
        } else {
            document.querySelector('.message').innerText = "";
        }
    }

    // Hàm đánh giá độ mạnh của mật khẩu
    function checkPasswordStrength(password) {
        let strength = 0;
        let tips = [];

        if (password.length < 6) {
            tips.push("Cần ít nhất 6 ký tự");
        } else {
            strength += 1;
        }
        if (password.match(/[a-z]+/)) {
            strength += 1;
        } else {
            tips.push("Thêm chữ cái thường");
        }
        if (password.match(/[A-Z]+/)) {
            strength += 1;
        } else {
            tips.push("Thêm chữ cái HOA");
        }
        if (password.match(/[0-9]+/)) {
            strength += 1;
        } else {
            tips.push("Thêm chữ số");
        }
        if (password.match(/[^a-zA-Z0-9]+/)) {
            strength += 1;
        } else {
            tips.push("Thêm ký tự đặc biệt");
        }

        const passwordStrengthBar = document.getElementById("password-strength-bar");
        const passwordStrengthText = document.getElementById("password-strength-text");
        const passwordTips = document.getElementById("password-tips");

        passwordStrengthBar.style.width = (strength * 20) + "%";

        if (password.length === 0) {
            passwordStrengthBar.className = "password-strength-bar";
            passwordStrengthText.textContent = "";
            passwordTips.innerHTML = "";
            return;
        } else if (strength < 2) {
            passwordStrengthBar.className = "password-strength-bar strength-weak";
            passwordStrengthText.textContent = "Yếu";
            passwordStrengthText.className = "strength-text text-danger";
        } else if (strength < 4) {
            passwordStrengthBar.className = "password-strength-bar strength-medium";
            passwordStrengthText.textContent = "Trung bình";
            passwordStrengthText.className = "strength-text text-warning";
        } else {
            passwordStrengthBar.className = "password-strength-bar strength-strong";
            passwordStrengthText.textContent = "Mạnh";
            passwordStrengthText.className = "strength-text text-success";
        }

        passwordTips.innerHTML = tips.length > 0 ?
            "<small>Gợi ý: " + tips.join(", ") + "</small>" :
            "<small class='text-success'>Mật khẩu tốt!</small>";
    }
</script>
